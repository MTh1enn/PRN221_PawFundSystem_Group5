@page
@model PRN221_PawFundSystem_Group5.Pages.FeedbackPage.CreateModel
@{
    ViewData["Title"] = "Create Feedback";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa; /* Màu nền nhẹ */
        }
        h2 {
            text-align: center; /* Canh giữa tiêu đề */
            margin-top: 20px; /* Khoảng cách từ trên xuống */
            margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
        }
        .form-group {
            margin-bottom: 20px; /* Khoảng cách dưới các trường nhập liệu */
        }
        .btn-primary {
            background-color: #007bff; /* Màu nền cho nút */
            border: none; /* Ẩn viền nút */
        }
        .btn-primary:hover {
            background-color: #0056b3; /* Màu nền khi hover */
        }
        .text-danger {
            margin-top: 5px; /* Khoảng cách trên cho thông báo lỗi */
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Create Feedback</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Feedback.Description"></label>
                <input asp-for="Feedback.Description" class="form-control" />
                <span asp-validation-for="Feedback.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Rating"></label>
                <input asp-for="Feedback.Rating" class="form-control" />
                <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>

        <div class="mt-3">
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script> *@
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>