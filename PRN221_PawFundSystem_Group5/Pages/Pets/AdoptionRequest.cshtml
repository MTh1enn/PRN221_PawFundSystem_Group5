@page
@model AdoptionRequestModel

<h2>Danh sách thú cưng</h2>

<form method="post">
    <div class="form-group">
        <label for="User Id">User  ID:</label>
        <input type="number" class="form-control" id="User Id" name="User Id" required />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Tên</th>
                <th>Mô tả</th>
                <th>Giống</th>
                <th>Màu sắc</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pet in Model.Pets)
            {
                <tr>
                    <td>@pet.Name</td>
                    <td>@pet.Description</td>
                    <td>@pet.Breed</td>
                    <td>@pet.Color</td>
                    <td>
                        <button type="submit" name="petId" value="@pet.Id" class="btn btn-primary">Gửi yêu cầu nhận nuôi</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>