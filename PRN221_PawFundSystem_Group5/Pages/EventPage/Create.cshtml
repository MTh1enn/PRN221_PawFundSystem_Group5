@page
@model PawFundSystem.Page.EventPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="page-title">Create Event</h1>

<h4 class="section-title">Event Information</h4>
<hr class="section-divider" />
<div class="form-container">
    <div class="col-md-8 mx-auto">
        <form method="post" class="event-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Event.UserId" class="control-label">User</label>
                <select asp-for="Event.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Event.Title" class="control-label">Event Title</label>
                <input asp-for="Event.Title" class="form-control" />
                <span asp-validation-for="Event.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.Description" class="control-label">Event Description</label>
                <input asp-for="Event.Description" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.StartTime" class="control-label">Start Time</label>
                <input asp-for="Event.StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Event.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.EndTime" class="control-label">End Time</label>
                <input asp-for="Event.EndTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Event.EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event.Location" class="control-label">Event Location</label>
                <input asp-for="Event.Location" class="form-control" />
                <span asp-validation-for="Event.Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Create Event</button>
            </div>
            <div class="back-link">
                <a asp-page="Index" class="btn btn-link">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* General styling for the page */
    body {
        background-color: #f4f6f9;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: #343a40;
        text-align: center;
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 500;
        color: #007BFF;
        margin-bottom: 20px;
    }

    .section-divider {
        border-top: 2px solid #007BFF;
        width: 120px;
        margin: 0 auto 20px;
    }

    .form-container {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
    }

    .event-form .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-size: 1.1rem;
        font-weight: 500;
        color: #495057;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 1rem;
        padding: 12px 16px;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #007BFF;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .btn {
        font-size: 1.1rem;
        padding: 12px 20px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

    .btn-primary {
        background-color: #007BFF;
        border: none;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-link {
        font-size: 1.1rem;
        color: #007BFF;
        text-decoration: none;
    }

    .btn-link:hover {
        text-decoration: underline;
    }

    .back-link {
        text-align: center;
        margin-top: 20px;
    }

    /* Media Query for responsiveness */
    @@media (max-width: 767px) {
        .form-container {
            margin: 0 15px;
            padding: 20px;
        }

        .page-title {
            font-size: 2rem;
        }

        .section-title {
            font-size: 1.5rem;
        }

        .form-control {
            padding: 10px 14px;
        }

        .btn {
            font-size: 1rem;
            padding: 10px 18px;
        }
    }
</style>
