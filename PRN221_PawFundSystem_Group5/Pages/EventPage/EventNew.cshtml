@page
@model PRN221_PawFundSystem_Group5.Pages.EventPage.EventNewModel
@{
}
<style>
    /* General Styles */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #495057;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5rem;
        color: #343a40;
        text-align: center;
        margin-bottom: 30px;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

        .action-buttons a {
            padding: 12px 20px;
            background-color: #28a745; /* Green color for Create button */
            color: white;
            font-size: 1.1rem;
            font-weight: bold;
            text-decoration: none;
            border-radius: 6px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .action-buttons a:hover {
                background-color: #218838;
                transform: translateY(-2px);
            }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #343a40;
            color: #ffffff;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    /* Status Badge */
    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: bold;
        text-align: center;
    }

    .status-completed {
        color: #28a745;
        background-color: #e6f4ea;
    }

    .status-scheduled {
        color: #007bff;
        background-color: #e1ecf7;
    }

    .status-cancelled {
        color: #dc3545;
        background-color: #f8d7da;
    }

    /* Pagination Styling */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px 0;
        background-color: #ffffff;
        border-radius: 10px;
        margin-top: 30px;
    }

        .pagination a, .pagination span {
            padding: 10px 15px;
            font-size: 1.1rem;
            font-weight: bold;
            color: #007bff;
            margin: 0 10px;
            text-decoration: none;
            border-radius: 6px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .pagination a:hover {
                background-color: #007bff;
                color: white;
            }

        .pagination .active {
            background-color: #007bff;
            color: white;
        }

    /* Action Buttons (Edit, Details, Delete) */
    .action-buttons-table {
        display: flex;
        gap: 10px;
    }

        .action-buttons-table a {
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
            transition: transform 0.2s ease, background-color 0.3s ease;
        }

        .action-buttons-table .edit {
            background-color: #007bff;
            color: white;
        }

            .action-buttons-table .edit:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .action-buttons-table .details {
            background-color: #ffc107;
            color: white;
        }

            .action-buttons-table .details:hover {
                background-color: #e0a800;
                transform: translateY(-2px);
            }

        .action-buttons-table .delete {
            background-color: #dc3545;
            color: white;
        }

            .action-buttons-table .delete:hover {
                background-color: #c82333;
                transform: translateY(-2px);
            }

    /* Back to Admin Button */
    .back-to-admin {
        display: inline-block;
        margin-top: 30px;
        text-align: center;
        background-color: #f8f9fa;
        color: #007bff;
        font-size: 1.1rem;
        font-weight: bold;
        text-decoration: none;
        padding: 12px 20px;
        border: 2px solid #007bff;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        width: 100%;
        box-sizing: border-box;
    }

        .back-to-admin:hover {
            background-color: #007bff;
            color: white;
            transform: translateY(-2px);
        }

    /* Ensures Back to Admin button doesn't get overlapped */
    footer {
        margin-top: 50px; /* Add space to footer */
    }
</style>

<div class="container">
    <h1>NEW EVENT</h1>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Event[0].Title)</th>
                <th>@Html.DisplayNameFor(model => model.Event[0].Description)</th>
                <th>@Html.DisplayNameFor(model => model.Event[0].StartTime)</th>
                <th>@Html.DisplayNameFor(model => model.Event[0].EndTime)</th>
                <th>@Html.DisplayNameFor(model => model.Event[0].Location)</th>
                <th>@Html.DisplayNameFor(model => model.Event[0].Status)</th>
                <th>@Html.DisplayNameFor(model => model.Event[0].User)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Event)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>
                        <span class="status-badge @(item.Status.ToLower())">
                            @item.Status
                        </span>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage - 1)">Previous</a>
        }

        <span class="active">Page @Model.CurrentPage of @Model.TotalPages</span>

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage + 1)">Next</a>
        }
    </div>

    
</div>

<footer>
    <div class="footer-content">
        <p>© 2024 Paw Fund System. All rights reserved.</p>
    </div>
</footer>