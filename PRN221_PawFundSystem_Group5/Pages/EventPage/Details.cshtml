@page
@model PawFundSystem.Page.EventPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="page-title">Event Details</h1>

<div class="details-container">
    <h4 class="section-title">Event Information</h4>
    <hr class="section-divider" />
    <dl class="row details-list">
        <dt class="col-sm-2">Event Title</dt>
        <dd class="col-sm-10 detail-item">
            @Html.DisplayFor(model => model.Event.Title)
        </dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10 detail-item">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>

        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10 detail-item">
            @Html.DisplayFor(model => model.Event.StartTime)
        </dd>

        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10 detail-item">
            @Html.DisplayFor(model => model.Event.EndTime)
        </dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10 detail-item">
            @Html.DisplayFor(model => model.Event.Location)
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10 detail-item">
            @Html.DisplayFor(model => model.Event.Status)
        </dd>

        <dt class="col-sm-2">Organizer</dt>
        <dd class="col-sm-10 detail-item">
            @Html.DisplayFor(model => model.Event.UserId)
        </dd>
    </dl>

    <div class="action-links">
        <a asp-page="./Edit" asp-route-id="@Model.Event.Id" class="btn btn-secondary">Edit</a>
        <a asp-page="./Index" class="btn btn-link">Back to List</a>
    </div>
</div>

<style>
    /* General page styles */
    body {
        background-color: #f9f9f9;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: #343a40;
        text-align: center;
        margin-top: 30px;
        margin-bottom: 40px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 500;
        color: #007BFF;
        margin-bottom: 20px;
    }

    .section-divider {
        border-top: 2px solid #007BFF;
        width: 100px;
        margin: 0 auto 20px;
    }

    .details-container {
        background-color: #fff;
        padding: 40px;
        margin: 0 10%;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 100px; /* Ensure space for footer */
    }

    .details-list {
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .details-list dt {
        font-weight: 600;
        color: #343a40;
    }

    .details-list dd {
        font-weight: 400;
        color: #495057;
        margin-bottom: 10px;
    }

    .detail-item {
        font-size: 1rem;
        color: #495057;
        padding: 10px;
        background-color: #f8f9fa;
        border-radius: 6px;
        border: 1px solid #dcdfe1;
    }

    .detail-item:hover {
        background-color: #e9ecef;
        border-color: #d1d8e2;
    }

    .action-links {
        text-align: center;
        margin-top: 30px;
        clear: both;
    }

    .btn {
        font-size: 1rem;
        padding: 12px 20px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: #fff;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-link {
        font-size: 1rem;
        color: #007BFF;
        text-decoration: none;
    }

    .btn-link:hover {
        text-decoration: underline;
    }
</style>
