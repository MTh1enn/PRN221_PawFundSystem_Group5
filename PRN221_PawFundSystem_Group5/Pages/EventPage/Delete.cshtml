@page
@model PawFundSystem.Page.EventPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="page-title">Delete Event</h1>

<h3 class="confirmation-message">Are you sure you want to delete this event?</h3>
@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-danger">
        @Model.Message
    </div>
}

<div class="event-details">
    <h4>Event Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.Title)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.Description)</dd>

        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.StartTime)</dd>

        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.EndTime)</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.Location)</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.Status)</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.UserId)</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Event.Id" />
        <div class="action-buttons">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-link">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* General styling for the page */
    body {
        background-color: #f4f6f9;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 600;
        color: #343a40;
        text-align: center;
        margin-bottom: 20px;
    }

    .confirmation-message {
        font-size: 1.6rem;
        font-weight: 500;
        color: #d9534f;
        text-align: center;
        margin-bottom: 30px;
    }

    .event-details {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px;
    }

    .row dt {
        font-weight: 500;
        color: #495057;
        font-size: 1.1rem;
    }

    .row dd {
        font-size: 1rem;
        color: #343a40;
    }

    .action-buttons {
        text-align: center;
        margin-top: 20px;
    }

    .btn {
        font-size: 1rem;
        padding: 12px 20px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
        margin: 0 10px;
    }

    .btn-danger {
        background-color: #d9534f;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c9302c;
    }

    .btn-link {
        font-size: 1rem;
        color: #007BFF;
        text-decoration: none;
    }

    .btn-link:hover {
        text-decoration: underline;
    }
</style>
