@page
@model PRN221_PawFundSystem_Group5.Pages.HomePageModel
@{
    ViewData["Title"] = "HomePage";
}


<div class="home-container">
    <!-- Header Section -->
    <header class="header">
        <div class="logo">
            <h1>PawFund</h1>
        </div>
        <nav class="navbar">
            <a href="#about">About Us</a>
            <a href="#adopt">Adopt</a>
            <a href="#donate">Donate</a>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h2>Give a Home to a Pet in Need</h2>
            <p>Help abandoned animals find a loving family. Adopt, Donate, or Volunteer today!</p>
            <div class="cta-buttons">
                <a href="#adopt" class="cta-button">Adopt Now</a>
                <a href="#donate" class="cta-button">Donate</a>
            </div>
        </div>
    </section>

    <!-- Mission Statement -->
    <section class="mission" id="about">
        <h3>Our Mission</h3>
        <p>PawFund is dedicated to rescuing abandoned animals and giving them a second chance at life. Your support helps us provide food, shelter, and love to animals in need.</p>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works" id="how-it-works">
        <h3>How It Works</h3>
        <div class="steps">
            <div class="step">
                <h4>Step 1: Choose a Pet</h4>
                <p>Browse through our available pets and select the one you would like to adopt.</p>
            </div>
            <div class="step">
                <h4>Step 2: Apply for Adoption</h4>
                <p>Fill out the adoption application form to start the process.</p>
            </div>
            <div class="step">
                <h4>Step 3: Bring Your New Friend Home</h4>
                <p>Once approved, we will arrange a meeting for you to bring your new pet home!</p>
            </div>
        </div>
    </section>

    <!-- New Dashboard Buttons Section -->
    <section class="dashboard-buttons-section">
        <h3>What do you want?</h3>
        <div class="dashboard-buttons">
            
            <a class="dashboard-button" href="/Pets/AdoptionRequest">
                <div class="icon">🐾</div>
                <div class="button-text">Adopt a Pet</div>
            </a>
            
            <a class="dashboard-button" href="/Pets/UpdateHealth">
                <div class="icon">🤝</div>
                <div class="button-text">Update Health Checking</div>
            </a>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="contact-info">
            <p>Contact us: info@pawfund.org</p>
            <div class="social-links">
                <a href="#">Facebook</a> |
                <a href="#">Instagram</a> |
                <a href="#">Twitter</a>
            </div>
        </div>
    </footer>
</div>

