@page
@model PRN221_PawFundSystem_Group5.Pages.UserPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

@* CSS styles *@
<style>
    /* General Styles */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #495057;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5rem;
        color: #343a40;
        text-align: center;
        margin-bottom: 30px;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

        .action-buttons a {
            padding: 12px 20px;
            background-color: #28a745; /* Green color for Create button */
            color: white;
            font-size: 1.1rem;
            font-weight: bold;
            text-decoration: none;
            border-radius: 6px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .action-buttons a:hover {
                background-color: #218838;
                transform: translateY(-2px);
            }

    /* Table Styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        table-layout: fixed;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            word-wrap: break-word;
        }

        .table th {
            background-color: #343a40;
            color: #ffffff;
            font-weight: bold;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    /* Action Buttons (Edit, Details, Delete) */
    .action-buttons-table {
        display: flex;
        gap: 10px;
    }

        .action-buttons-table a {
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
            font-weight: bold;
            text-align: center;
            transition: transform 0.2s ease, background-color 0.3s ease;
        }

        .action-buttons-table .edit {
            background-color: #007bff;
            color: white;
        }

            .action-buttons-table .edit:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .action-buttons-table .details {
            background-color: #ffc107;
            color: white;
        }

            .action-buttons-table .details:hover {
                background-color: #e0a800;
                transform: translateY(-2px);
            }

        .action-buttons-table .delete {
            background-color: #dc3545;
            color: white;
        }

            .action-buttons-table .delete:hover {
                background-color: #c82333;
                transform: translateY(-2px);
            }

    /* Pagination Styling */
    .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px 0;
        background-color: #ffffff;
        border-radius: 10px;
        margin-top: 30px;
    }

        .pagination a, .pagination span {
            padding: 10px 15px;
            font-size: 1.1rem;
            font-weight: bold;
            color: #007bff;
            margin: 0 10px;
            text-decoration: none;
            border-radius: 6px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .pagination a:hover {
                background-color: #007bff;
                color: white;
            }

        .pagination .active {
            background-color: #007bff;
            color: white;
        }

    /* Back to Admin Button */
    .back-to-admin {
        display: inline-block;
        margin-top: 30px;
        text-align: center;
        background-color: #f8f9fa;
        color: #007bff;
        font-size: 1.1rem;
        font-weight: bold;
        text-decoration: none;
        padding: 12px 20px;
        border: 2px solid #007bff;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.3s ease;
        width: 100%;
        box-sizing: border-box;
    }

        .back-to-admin:hover {
            background-color: #007bff;
            color: white;
            transform: translateY(-2px);
        }

    /* Ensures Back to Admin button doesn't get overlapped */
    footer {
        margin-top: 50px; /* Add space to footer */
    }
</style>

<div class="container">
    <h1>User Management</h1>

    <div class="action-buttons">
        <a asp-page="Create">Create New</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.User[0].Avatar)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].Email)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].Password)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].Role)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].Address)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].Phone)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].UpdatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.User[0].Status)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Avatar)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <div class="action-buttons-table">
                            <a class="edit" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        </div>
                        <div class="action-buttons-table">
                            <a class="details" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        </div>
                        <div class="action-buttons-table">
                            <a class="delete" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <a asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage - 1)" class="btn btn-primary">Previous</a>
        }

        <span class="active">Page @Model.CurrentPage of @Model.TotalPages</span>

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <a asp-page="./Index" asp-route-pageIndex="@(Model.CurrentPage + 1)" class="btn btn-primary">Next</a>
        }
    </div>

    <p><a asp-page="/Admin" class="back-to-admin">Back to Admin</a></p>
</div>

<footer>
    <div class="footer-content">
        <p>© 2024 Paw Fund System. All rights reserved.</p>
    </div>
</footer>
